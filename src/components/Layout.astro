---
import Nav from "@components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script src="//unpkg.com/alpinejs" defer></script>
    <title>{title}</title>
  </head>

  <body class="flex flex-col min-h-screen">
    <Nav />
    <div class="content mb-auto">
      <div class="nav-pop"></div>
      <slot />
      <div class="footer-pop"></div>
    </div>
    <style>
      @font-face {
        font-family: "KochSchrift";
        src: url("/fonts/Koch-Schrift.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      html,
      body {
        height: 100%;
        font-family: "serif";
      }

      body > footer {
        position: sticky;
        top: 100vh;
      }
      .nav-pop {
        height: 65px;
      }
      .footer-pop {
        height: 80px;
      }

      :global(h1) {
        font-family: "KochSchrift";
      }

      body {
        margin: 0;
        background-color: #000000;
        overflow-y: scroll;
      }

      :global(main) {
        margin: auto;
        padding: 1em;
        max-width: 40rem;
      }
    </style>
  </body>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-NE5MEZXZCF"
  ></script>
  <script>
    // @ts-ignore
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      // @ts-ignore
      dataLayer.push(arguments);
    }
    // @ts-ignore
    gtag("js", new Date());
    // @ts-ignore
    gtag("config", "G-NE5MEZXZCF");
  </script>
</html>
